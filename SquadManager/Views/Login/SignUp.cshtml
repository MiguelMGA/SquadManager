@model SquadManager.Models.UserViewModel

@{
	Layout = null;
	ViewData["Tittle"] = "Crie sua conta";
}

<link href="~/css/login.css" rel="stylesheet" />

<section>
	<h1>Crie sua conta de graça!</h1>
	<form>
		<input id="username" type="text" name="username" placeholder="Username" required/>
		<input id="email" type="email" name="email" placeholder="E-mail" required/>
		<input id="password" type="password" name="password" placeholder="Senha" required/>
		<input id="confirmPassword" type="password" name="confirmPassword" placeholder="Confirmar senha" required/>
		<div class="error">
			<span hidden>Senhas diferentes!</span>
		</div>
		<button type="submit" style="margin-top: 40px;">Criar</button>
	</form>
</section>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/signup.js"></script>